<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Proveedor"
    android:background="@color/color09">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"

        android:layout_marginBottom="0dp"
        android:background="@color/rojo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblProveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="@string/lblProveedores"
            android:textColor="@color/color09"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp">

        <Button
            android:id="@+id/btnNuevoProveedor"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boton_aniadir"
            android:drawableLeft="@drawable/nuevousuario"
            android:drawablePadding="8dp"
            android:onClick="NuevoProveedor"
            android:paddingStart="16dp"


            android:paddingLeft="16dp"
            android:text="@string/lblAniadirProveedores"
            android:textAllCaps="false"
            android:textColor="@color/color09" />

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="130dp">
            <ListView
                android:id="@+id/listViewProveedores"
                android:layout_width="match_parent"
                android:layout_height="518dp"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color09"
                android:dividerHeight="6dp">

            </ListView>
            </LinearLayout>


</RelativeLayout>






